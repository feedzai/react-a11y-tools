{
	"name": "@feedzai/react-a11y-tools",
	"author": "Feedzai",
	"version": "1.4.1",
	"license": "MIT",
	"main": "./dist/index.umd.cjs",
	"types": "./dist/index.d.ts",
	"module": "./dist/index.es.mjs",
	"exports": {
		".": {
			"import": "./dist/index.es.cjs",
			"require": "./dist/index.cjs.mjs",
			"types": "./dist/index.d.ts"
		}
	},
	"files": [
		"dist"
	],
	"engine": {
		"node": ">= 18",
		"npm": ">= 10"
	},
	"scripts": {
		"types:check": "tsc --project ./tsconfig.json",
		"build": "npm run types:check && vite build",
		"format:fix": "npm run prettier:base -- --write 'src/**/*.{ts,tsx,js,jsx}'",
		"lint": "eslint \"src/**/*.{ts,tsx,js,jsx}\" --fix",
		"prettier:base": "prettier --parser typescript",
		"postbuild": "npx size-limit",
		"postinstall": "cd ./documentation && npm install",
		"docs:start": "cd ./documentation && npm run start",
		"docs:start-ci": "cd ./documentation && npm run start",
		"docs:build": "cd ./documentation && npm run build",
		"docs:deploy": "cd ./documentation && GIT_USER=feedzai && npm run deploy",
		"reinstall": "rm -rf node_modules && npm install",
		"coverage:clean": "rm -rf .nyc_output coverage-reports coverage || true",
		"coverage:merge": "node ./scripts/merge-coverage.cjs",
		"pretest": "npm run coverage:clean",
		"test:unit": "vitest --ui",
		"test:unit-watch": "vitest watch",
		"test:unit-ci": "vitest run",
		"test:component-open": "cypress open --component --browser chrome",
		"test:component-run": "cypress run --component --browser chrome",
		"test:e2e-open": "cypress open --e2e",
		"test:e2e-run": "cypress run --e2e --browser chrome",
		"test:e2e": "start-server-and-test docs:start-ci http://localhost:3000/react-a11y-tools/ 'npm run test:e2e-run'",
		"test": "npm run test:unit-ci && npm run test:component-run && npm run test:e2e",
		"posttest": "npm run coverage:merge",
		"test:ci": "npm run test:unit-ci && npm run test:component-run && npm run test:e2e"
	},
	"peerDependencies": {
		"react": ">=16.14.0",
		"react-dom": ">=16.14.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/feedzai/react-a11y-tools.git"
	},
	"devDependencies": {
		"@cypress/code-coverage": "3.12.24",
		"@size-limit/preset-small-lib": "11.0.2",
		"@testing-library/cypress": "10.0.1",
		"@testing-library/jest-dom": "6.4.2",
		"@testing-library/react": "14.2.1",
		"@types/jsdom": "16.2.13",
		"@types/node": "20.11.20",
		"@types/react": "18.2.58",
		"@types/react-dom": "18.2.19",
		"@typescript-eslint/eslint-plugin": "5.1.0",
		"@typescript-eslint/parser": "5.1.0",
		"@vitejs/plugin-react-swc": "^3.6.0",
		"@vitest/coverage-istanbul": "^1.3.1",
		"@vitest/ui": "^1.3.1",
		"autoprefixer": "10.4.17",
		"axe-core": "4.8.4",
		"chalk": "4.1.2",
		"cypress": "13.6.6",
		"cypress-axe": "1.5.0",
		"cypress-multi-reporters": "1.6.4",
		"cypress-real-events": "1.12.0",
		"cypress-recurse": "1.35.2",
		"eslint": "8.56.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-import-resolver-typescript": "3.6.1",
		"eslint-plugin-cypress": "2.15.1",
		"eslint-plugin-import": "2.29.1",
		"eslint-plugin-jsx-a11y": "6.8.0",
		"eslint-plugin-prettier": "4.0.0",
		"eslint-plugin-react": "7.33.2",
		"eslint-plugin-react-hooks": "4.6.0",
		"history": "5.3.0",
		"husky": "7.0.4",
		"lint-staged": "11.2.3",
		"nyc": "15.1.0",
		"postcss": "^8.4.35",
		"prettier": "2.7.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-is": "18.2.0",
		"react-router": "^6.22.1",
		"react-router-dom": "^6.22.1",
		"sass": "1.53.0",
		"size-limit": "11.0.2",
		"start-server-and-test": "2.0.3",
		"ts-jest": "29.1.2",
		"typescript": "5.3.3",
		"vite": "^5.1.4",
		"vite-plugin-dts": "^3.7.3",
		"vite-plugin-istanbul": "5.0.0",
		"vitest": "^1.3.1"
	},
	"browser": {
		"fs": false
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,html}": [
			"npm run format:fix",
			"npm run lint"
		]
	},
	"size-limit": [
		{
			"path": "dist/index.umd.cjs",
			"limit": "10 kB",
			"ignore": [
				"fs"
			]
		},
		{
			"path": "dist/index.es.mjs",
			"limit": "10 kB",
			"ignore": [
				"fs"
			]
		}
	],
	"nyc": {
		"all": true,
		"report-dir": "coverage-reports/cypress",
		"reporter": [
			"lcov",
			"json"
		],
		"check-coverage": true,
		"watermarks": {
			"statements": 80,
			"branches": 70,
			"functions": 80,
			"lines": 80
		},
		"include": [
			"src/**/*"
		]
	}
}
