{
	"name": "@feedzai/react-a11y-tools",
	"author": "Feedzai",
	"version": "1.4.1",
	"license": "MIT",
	"main": "dist/index.umd.cjs",
	"module": "dist/index.es.mjs",
	"types": "dist/types/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.es.mjs",
			"require": "./dist/index.umd.cjs"
		}
	},
	"files": [
		"dist"
	],
	"engine": {
		"node": ">=18",
		"npm": ">=8"
	},
	"scripts": {
		"build": "vite build",
		"format:fix": "npm prettier:base -- --write 'src/**/*.{ts,tsx,js,jsx}'",
		"lint": "eslint \"src/**/*.{ts,tsx,js,jsx}\" --fix",
		"typecheck": "tsc --project ./tsconfig.json",
		"prettier:base": "prettier --parser typescript",
		"postbuild": "npx size-limit",
		"postinstall": "cd ./documentation && npm install",
		"documentation:start": "cd ./documentation && npm run start",
		"documentation:build": "cd ./documentation && npm run build",
		"documentation:deploy": "cd ./documentation && GIT_USER=feedzai && npm run deploy",
		"documentation:ci": "cd ./documentation && npm run ci",
		"reinstall": "rm -rf node_modules && npm install",
		"coverage:clean": "merge-coverage clear && merge-coverage clear --folder coverage",
		"coverage:merge": "merge-coverage combine-coverage --tools cypress,vitest",
		"coverage:combine-reports": "merge-coverage combine-reports",
		"pretest": "npm run coverage:clean",
		"posttest:ci": "npm run coverage:merge && npm run coverage:combine-reports",
		"test": "npm run test:unit-ci && npm run test:component-run && npm run test:integration",
		"test:ci": "npm run test",
		"test:unit": "vitest --ui",
		"test:unit-watch": "vitest watch",
		"test:unit-ci": "vitest run",
		"test:component-open": "cypress open --component",
		"test:component-run": "cypress run --component",
		"test:integration-open": "cypress open --e2e",
		"test:integration-run": "cypress run --e2e",
		"test:integration": "start-server-and-test documentation:ci 3000 'npm run test:integration-run'"
	},
	"peerDependencies": {
		"react": ">=16.14.0",
		"react-dom": ">=16.14.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/feedzai/react-a11y-tools.git"
	},
	"devDependencies": {
		"@cypress/code-coverage": "3.12.22",
		"@istanbuljs/nyc-config-typescript": "^1.0.2",
		"@jtmdias/merge-coverage": "^1.1.0",
		"@size-limit/preset-small-lib": "11.0.2",
		"@testing-library/cypress": "10.0.1",
		"@testing-library/jest-dom": "^6.4.2",
		"@testing-library/react": "^14.2.1",
		"@testing-library/user-event": "14.5.2",
		"@types/classnames": "2.3.0",
		"@types/jsdom": "21.1.6",
		"@types/node": "20.11.19",
		"@types/react": "18.2.56",
		"@types/react-dom": "18.2.19",
		"@typescript-eslint/eslint-plugin": "7.0.1",
		"@typescript-eslint/parser": "7.0.1",
		"@vitejs/plugin-react-swc": "^3.6.0",
		"@vitest/coverage-istanbul": "^1.3.0",
		"@vitest/ui": "^1.3.0",
		"autoprefixer": "10.4.17",
		"axe-core": "4.8.4",
		"chalk": "^5.3.0",
		"cypress": "13.6.4",
		"cypress-axe": "1.5.0",
		"cypress-real-events": "1.11.0",
		"cypress-recurse": "1.35.2",
		"esbuild": "0.20.0",
		"eslint": "8.56.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-import-resolver-typescript": "3.6.1",
		"eslint-plugin-cypress": "2.15.1",
		"eslint-plugin-import": "2.29.1",
		"eslint-plugin-jsx-a11y": "6.8.0",
		"eslint-plugin-prettier": "5.1.3",
		"eslint-plugin-react": "7.33.2",
		"eslint-plugin-react-hooks": "4.6.0",
		"husky": "9.0.11",
		"jsdom": "^24.0.0",
		"lint-staged": "15.2.2",
		"nyc": "15.1.0",
		"prettier": "3.2.5",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-router": "^6.22.1",
		"react-router-dom": "^6.22.1",
		"sass": "1.70.0",
		"size-limit": "11.0.2",
		"start-server-and-test": "2.0.3",
		"typescript": "^5.3.3",
		"vite": "^5.1.3",
		"vite-plugin-dts": "^3.7.2",
		"vite-plugin-istanbul": "^5.0.0",
		"vitest": "^1.3.0"
	},
	"size-limit": [
		{
			"path": "dist/index.umd.cjs",
			"limit": "10 kB",
			"ignore": [
				"fs"
			]
		},
		{
			"path": "dist/index.es.mjs",
			"limit": "10 kB",
			"ignore": [
				"fs"
			]
		}
	],
	"nyc": {
		"all": true,
		"report-dir": "coverage-reports/cypress",
		"reporter": [
			"lcov",
			"json"
		],
		"check-coverage": true,
		"include": [
			"src/**/*"
		]
	},
	"dependencies": {
		"@jtmdias/js-utilities": "^1.4.0"
	}
}
